                  "example": "any"
                },
                "language": {
                  "example": "any"
                },
                "pageCount": {
                  "example": "any"
                },
                "deweyDecimal": {
                  "example": "any"
                },
                "lcc": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
