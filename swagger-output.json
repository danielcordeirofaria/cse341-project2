    "/books/": {
      "get": {
        "description": "Retrieve all books from the library.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new book in the library.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "example": "any"
                },
                "author": {
                  "example": "any"
                },
                "isbn": {
                  "example": "any"
                },
                "publisher": {
                  "example": "any"
                },
                "publicationDate": {
                  "example": "any"
                },
                "genre": {
                  "example": "any"
                },
